  runPolicy: Serial
  source:
    type: "Git"
    git:
      uri: "https://github.com/debianmaster/openshift-examples"
  strategy:
    type: JenkinsPipeline
    jenkinsPipelineStrategy:
      jenkinsfilePath: pipeline-example/Jenkinsfile
  output:
  resources:
  postCommit:
